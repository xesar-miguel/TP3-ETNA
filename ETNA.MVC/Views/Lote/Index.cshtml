@model IEnumerable<ETNA.MVC.Models.FB.LoteViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@{
    if (ViewBag.MensajeConfirmacion != null && ViewBag.MensajeConfirmacion != "")
    {
        <div>
            <p>
                @ViewBag.MensajeConfirmacion
            </p>
        </div>
    }
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NroLote)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescripcionTipoLote)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NroLote)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaCreacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescripcionTipoLote)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
